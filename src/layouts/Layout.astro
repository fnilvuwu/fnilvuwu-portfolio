---
import '../styles/globals.css';
import { PageLayout } from '../components/PageLayout';

interface Props {
	title?: string;
}

const { title = "Fnilvu's Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="manifest" href="/site.webmanifest" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <meta name="theme-color" content="#ffffff" />
		<title>{title}</title>
	</head>
	<body>
        <!-- 
            We use PageLayout as a client-side hydrated component 
            to provide the NavBar and layout structure. 
            The components are treated as a React app for better interactivity.
        -->
        <PageLayout client:load>
            <slot />
        </PageLayout>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
        background-color: white; /* from globals */
        color: black;
	}
</style>
